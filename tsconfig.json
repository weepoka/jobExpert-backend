{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src/",
    "paths": {
      "config/*": ["config/*"],
      "docs/*": ["docs/*"],
      "middlewares/*": ["middlewares/*"],
      "models/*": ["models/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"],
      "validator/*": ["validator/*"]
    },
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": ["express.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.env"],
  "exclude": ["node_modules", "dist"]
  // "copyFiles": {
  //   "from": "src",
  //   "to": "dist",
  //   "include": ["**/*.json", "**/*.env"]
  // }
}
